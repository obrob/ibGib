@using LearnLanguages.Mvc4;

<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @RenderSection("Head", false)

    @*@Scripts.Render(Mvc4Resources.ScriptVirtualPathJQuery)*@

     @Scripts.Render(Mvc4Resources.ScriptVirtualPathModernizr,
                    Mvc4Resources.ScriptVirtualPathJQuery,
                    Mvc4Resources.ScriptVirtualPathJQueryVal,
                    Mvc4Resources.ScriptVirtualPathJQueryUi,
                    Mvc4Resources.ScriptVirtualPathJQueryMobile,
                    Mvc4Resources.ScriptVirtualPathCustom
                    )

    @Styles.Render(Mvc4Resources.StyleVirtualPathSite,
                   Mvc4Resources.StyleVirtualPathJQueryUi,
                   Mvc4Resources.StyleVirtualPathJQueryMobile
                   )


  </head>
  <body>

    <!--Page-->
    <div data-role="page" data-theme="e">

          
      <!--Header-->      
      <div data-role="header">
        @if (IsSectionDefined("Header")) {
            @RenderSection("Header")
        }
        @*else {
            <h1>@ViewBag.Title</h1>
            @Html.Partial("_LoginPartial")
        }*@
      </div>
          
      <!--Content-->
      <div data-role="content">
        <a id="testlink" href="" >test javascript</a>

        @RenderBody()
      </div>
        
      <div>
        @Html.Partial("_NavPartial")
      </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")*@
    @RenderSection("scripts", required: false)
  </body>
</html>